# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Model Selection
# Options for OPENAI_MODEL: gpt-4, gpt-4-turbo, gpt-4o, gpt-4o-mini, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini
# Options for ANTHROPIC_MODEL: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
ANTHROPIC_MODEL=claude-3-sonnet-20240229
# Default AI provider to use (openai or anthropic)
DEFAULT_AI_PROVIDER=openai

# Application Configuration
DEBUG=True
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Database Configuration (if needed in the future)
# DATABASE_URL=sqlite:///app.db

# Logging Configuration
LOG_LEVEL=INFO 